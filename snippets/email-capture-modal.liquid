  <!-- MOBILE -->
  <div class="d-flex d-lg-none modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-0 p-0">
        <div class="">
          <div class="email-popup-image-mobile p-4 d-flex flex-column justify-content-between">
            <button class="email-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
