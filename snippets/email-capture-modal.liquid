  <div class="d-none d-lg-flex modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-0 p-0">

        <!-- DESKTOP -->
        <div class=" row no-gutters w-100">
          <div class="col-6 p-0">
            <img class="email-popup-image-desktop" src={{ "email-popup-desktop.png" | asset_url }} />
          </div>
          <div class="col-6 email-popup-text-section px-5 py-4">
            <button class="email-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h5 class="email-popup-title">
