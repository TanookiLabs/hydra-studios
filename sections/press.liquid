<div class="press-section page-width py-5" id="press">
  <h2 class="text-center pricing-header mt-5 mb-4">
    {{ section.settings.title }}
  </h2>

  <div class="text-center">
    <p class="press-quote mb-0">
      "{{ section.settings.quote }}"
    </p>
    <div class="d-flex justify-content-center align-items-center">
      <span class="press-logo-dash">-</span>
      {% if section.settings.main_article_url != blank %}
        <a href="{{ section.settings.main_article_url }}" target="_blank">
      {% endif %}
        <img class="main-press-logo" src={{ section.settings.quote_logo | image_url }} />
      {% if section.settings.main_article_url != blank %}
        </a>
      {% endif %}
    </div>
  </div>
  {% if section.blocks.size > 0 %}
    <div class="mt-4 d-flex align-items-end justify-content-around flex-wrap">
      {% for block in section.blocks %}
        <div class="text-center my-3">
          {% if block.settings.article_url != blank %}
            <a href="{{ block.settings.article_url }}" target="_blank">
          {% endif %}
          {% if block.settings.publication_logo != blank %}
            <img src={{ block.settings.publication_logo | image_url }} class="logo-bar-image" />
          {% endif %}
          {% if block.settings.article_url != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Press",
  "class": "press-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "quote",
      "label": "Quote"
    },
    {
      "type": "image_picker",
      "id": "quote_logo",
      "label": "Quote Logo"
    },
    {
      "type": "url",
      "id": "main_article_url",
      "label": "Main Article URL"
    }
  ],
  "blocks": [
    {
      "type": "articles",
      "name": "Press Articles",
      "settings": [
        {
          "type": "image_picker",
          "id": "publication_logo",
          "label": "Publication Logo"
        },
        {
          "type": "url",
          "id": "article_url",
          "label": "Article URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
