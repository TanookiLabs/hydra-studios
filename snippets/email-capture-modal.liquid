            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(() => {
    firstTimeVisitor = !document.cookie.includes("hydra_popup")

    if (!window.location.href.includes('/pages') && firstTimeVisitor) {
      setTimeout(() => {
        $('#emailCaptureModal').modal('show')
        document.cookie = "hydra_popup=true";
      }, 1000)
    }
  })
</script>
